{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/annotations": "^1.13",
        "doctrine/dbal": "^2.13.9",
        "sensio/framework-extra-bundle": "^6.2",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.17|^2",
        "symfony/framework-bundle": "5.4.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/runtime": "5.4.*",
        "symfony/validator": "^5.0",
        "symfony/yaml": "5.4.*"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.6.1",
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/browser-kit": "5.4.*",
        "symfony/maker-bundle": "^1.43"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "phpunit:test": "./vendor/bin/phpunit -c phpunit.xml.dist",
        "phpunit:test-coverage": "./vendor/bin/phpunit -c phpunit.xml.dist --coverage-html=./storage/test-results/coverage --coverage-clover=./storage/test-results/coverage/clover.xml --log-junit=./storage/test-results/phpunit-result.xml",
        "phpcs": "./vendor/bin/phpcs --standard=./phpcs.xml --report=junit --report-file=./storage/test-results/phpcs-result.xml",
        "phpcs-dev": "./vendor/bin/phpcs --standard=./phpcs.xml",
        "phpmd": "./vendor/bin/phpmd src,tests html ./phpmd.xml --reportfile ./storage/test-results/phpmd-result.html",
        "phpmd-dev": "./vendor/bin/phpmd src,tests text ./phpmd.xml",
        "cache:clear": "php bin/console cache:pool:clear redis.cache",
        "code-quality-check": [
            "@phpcs",
            "@phpmd",
            "@phpunit:test-coverage"
        ],
        "code-quality-check-dev": [
            "@phpcs-dev",
            "@phpmd-dev",
            "@phpunit:test-coverage"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    }
}
